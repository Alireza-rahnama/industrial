package com.rutter;

import javax.swing.*;
import java.awt.*;

import javax.swing.JFrame;

public class StartUpPage extends JFrame {

	private JMenuBar menuBar = new JMenuBar();
	private Dimension windowSize = new Dimension(700, 300);

	public StartUpPage(String title) throws HeadlessException {
		super(title);

		setPreferredSize(windowSize);

		setJMenuBar(menuBar);

		JButton configureSimulation = new JButton("Configure Simulation");
		JButton addRadarStation = new JButton("Add Radar Station");
		JButton addClient = new JButton("Add New Client");

		menuBar.add(configureSimulation);
		menuBar.add(addRadarStation);
		menuBar.add(addClient);

		pack();
		setVisible(true);

	}

	public static void main(String[] args) {
		new StartUpPage("Performance Benchmarking");

	}

}
