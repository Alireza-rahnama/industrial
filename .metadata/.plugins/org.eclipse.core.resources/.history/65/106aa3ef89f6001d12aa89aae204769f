package com.rutter;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class RadarConfigurationPage extends JFrame {
    private JLabel titleLabel;
    private JLabel[] radarLabels;
    private JTextField[] radarFields;

    public RadarConfigurationPage() {
        setTitle("Radar Configuration");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(new GridLayout(6, 2));

        titleLabel = new JLabel("Configure Radar Quantities:");
        add(titleLabel);

        radarLabels = new JLabel[5];
        radarFields = new JTextField[5];

        String[] radarTypes = {"Radar A", "Radar B", "Radar C", "Radar D", "Radar E"};

        for (int i = 0; i < 5; i++) {
            radarLabels[i] = new JLabel(radarTypes[i] + ":");
            add(radarLabels[i]);

            radarFields[i] = new JTextField();
            add(radarFields[i]);
        }

        JButton submitButton = new JButton("Submit");
        submitButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                // Process the submitted values
                int[] radarQuantities = new int[5];
                for (int i = 0; i < 5; i++) {
                    try {
                        radarQuantities[i] = Integer.parseInt(radarFields[i].getText());
                    } catch (NumberFormatException ex) {
                        radarQuantities[i] = 0;
                    }
                }

                // Do something with the radar quantities (e.g., store in a database)
                // ...
                
                // Show a success message
                JOptionPane.showMessageDialog(null, "Configuration saved successfully!");
            }
        });
        add(submitButton);

        pack();
        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                new RadarConfigurationPage();
            }
        });
    }
}

