package com.rutter;

import java.awt.GraphicsConfiguration;
import javax.swing.*;
import java.awt.*;
import java.awt.HeadlessException;

import javax.swing.JFrame;

public class StartUpPage extends JFrame {

	private JMenuBar menuBar = new JMenuBar();

	public StartUpPage(String title) throws HeadlessException {
		super(title);
		setJMenuBar(menuBar);

		JMenu configureSimulation = new JMenu("Configure Simulation");
		JMenu addRadarStation = new JMenu("Add Radar Station");
		JMenu addClient = new JMenu("Add New Client");

		menuBar.add(configureSimulation);
		menuBar.add(addRadarStation);
		menuBar.add(addClient);
		
		add(menuBar);
		pack();
		setVisible(true);

	}

	public static void main(String[] args) {
		new StartUpPage("Performance Benchmarking");

	}

}
